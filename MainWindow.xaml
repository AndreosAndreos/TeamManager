<Window x:Class="TeamManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamManager"
        mc:Ignorable="d"
        Width="800" Height="600"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
  
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DataGrid" Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="2" Grid.RowSpan="5" BorderThickness="2" BorderBrush="Black"></DataGrid>
        <Button x:Name="BtnTeams" Click="BtnTeam_Click" Grid.Column="1" Grid.Row="1" Height="45" VerticalAlignment="Top" BorderThickness="1" Content="Team" FontSize="25" FontWeight="Black"/>
        <Button x:Name="BtnPlayers" Click="BtnPlayers_Click" Grid.Column="1" Grid.Row="1" Height="45" VerticalAlignment="Bottom" BorderThickness="1" Content="Player" FontSize="25" FontWeight="Black"/>
        <TextBox x:Name="TxtBoxTeam" Grid.Row="1" Grid.Column="3" Height="45" VerticalAlignment="Top" BorderThickness="1" GotFocus="TxtBoxTeam_GotFocus" LostFocus="TxtBoxTeam_LostFocus"/>
    </Grid>
</Window>
