<Window x:Class="TeamManager.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamManager"
        mc:Ignorable="d"
        Title="Stats" Height="450" Width="800">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Label x:Name="Data00Label" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Match ID" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <TextBox x:Name="TxtBoxData00" Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" />
        <Label x:Name="Data01Label" Grid.Row="1" Grid.Column="3" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Player ID" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <TextBox x:Name="TxtBoxData01" Grid.Row="1" Grid.Column="3" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" />
        <Label x:Name="Data02Label" Grid.Row="1" Grid.Column="5" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Goals" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <TextBox x:Name="TxtBoxData02" Grid.Row="1" Grid.Column="5" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" />

        <Label x:Name="Data10Label" Grid.Row="3" Grid.Column="1" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Assists" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <TextBox x:Name="TxtBoxData10" Grid.Row="3" Grid.Column="1" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" />
        <Label x:Name="Data11Label" Grid.Row="3" Grid.Column="3" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Yellow cards" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <TextBox x:Name="TxtBoxData11" Grid.Row="3" Grid.Column="3" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" />
        <Label x:Name="Data12Label" Grid.Row="3" Grid.Column="5" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Red cards" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <TextBox x:Name="TxtBoxData12" Grid.Row="3" Grid.Column="5" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" />

        <Label x:Name="Data20Label" Grid.Row="5" Grid.Column="1" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Minutes played" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <TextBox x:Name="TxtBoxData20" Grid.Row="5" Grid.Column="1" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" />
        <Label x:Name="Data21Label" Grid.Row="5" Grid.Column="3" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"/>
        <TextBox x:Name="TxtBoxData21" Grid.Row="5" Grid.Column="3" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" />
        <Label x:Name="Data22Label" Grid.Row="5" Grid.Column="5" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"/>
        <TextBox x:Name="TxtBoxData22" Grid.Row="5" Grid.Column="5" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" />

    </Grid>
</Window>
