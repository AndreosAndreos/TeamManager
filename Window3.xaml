<Window x:Class="TeamManager.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamManager"
        mc:Ignorable="d"
        Title="Match" Height="450" Width="800">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="190"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Label x:Name="Data00Label" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Home team" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <ComboBox x:Name="CmbBoxTeamHome" Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" SelectedValuePath="ID" DisplayMemberPath="Name" />

        <Label x:Name="Data01Label" Grid.Row="1" Grid.Column="3" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Away team" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <ComboBox x:Name="CmbBoxTeamAway" Grid.Row="1" Grid.Column="3" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" SelectedValuePath="ID" DisplayMemberPath="Name" />

        <Label x:Name="Data02Label" Grid.Row="1" Grid.Column="5" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Match date" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <DatePicker x:Name="DatePickerMatch" SelectedDateFormat="Short" Grid.Row="1" Grid.Column="5" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" 
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" FontFamily="Times New Roman"/>

        <Label x:Name="Data10Label" Grid.Row="3" Grid.Column="1" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Location" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <ComboBox x:Name="CmbBoxLocation" Grid.Row="3" Grid.Column="1" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" SelectedValuePath="ID" DisplayMemberPath="Name" />

        <Label x:Name="Data11Label" Grid.Row="3" Grid.Column="3" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Score home" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <TextBox x:Name="TxtBoxData11" Grid.Row="3" Grid.Column="3" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" />
        <Label x:Name="Data12Label" Grid.Row="3" Grid.Column="5" VerticalAlignment="Top" Height="45" BorderThickness="1" Background="Gray"
               Content ="Score away" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="22" FontFamily="arial"/>
        <TextBox x:Name="TxtBoxData12" Grid.Row="3" Grid.Column="5" VerticalAlignment="Bottom" Height="45" BorderThickness="1" Background="LightGray" />

        <Button x:Name="BtnSave" Click="BtnSave_Click" Grid.Column="1" Grid.Row="5" Height="70" Content="Save" FontSize="30" FontWeight="Bold" Background="Green"/>
        <Button x:Name="BtnAbort" Click="BtnAbort_Click" Grid.Column="3" Grid.Row="5" Height="70" Content="Abort" FontSize="30" FontWeight="Bold" Background="Red"/>

    </Grid>
</Window>
